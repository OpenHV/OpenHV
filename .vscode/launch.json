{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenHV",
            "type": "clr",
            "linux": {
                "type": "mono"
            },
            "osx": {
                "type": "mono"
            },
            "request": "launch",
            "program": "${workspaceRoot}/engine/OpenRA.Game.exe",
            "cwd": "${workspaceRoot}",
            "args": [
                "Engine.LaunchPath=${workspaceRoot}",
                "Engine.ModSearchPaths=${workspaceRoot}/mods",
                "Game.Mod=hv",
                "Debug.DisplayDeveloperSettings=true",
            ]
        },
    ]
}
